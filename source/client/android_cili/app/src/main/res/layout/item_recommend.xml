<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_200"
    android:layout_marginTop="@dimen/dp_6"
    android:layout_marginBottom="@dimen/dp_6"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_recommend_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/ll_btm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_ll_btm"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_8"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_recommend_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textStyle="bold"
            android:fontFamily="@font/ali_45r"
            android:text="推荐视频标题"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30" />

            <TextView
                android:id="@+id/tv_uper_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_toEndOf="@id/iv_avatar"
                android:text="namename"
                android:fontFamily="@font/ali_45r"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/tv_play_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/dp_4"
                android:text="123"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12sp"
                app:drawableStartCompat="@drawable/play_time" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_setting_bg">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <!-- 视频信息区 -->
            <ImageView
                android:id="@+id/img_cover"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="@id/btn_focus"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/btn_focus" />

            <TextView
                android:id="@+id/txt_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:text="作者昵称"
                android:textColor="@color/comment_orange"
                android:textSize="@dimen/text_size_12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/img_cover"
                app:layout_constraintTop_toTopOf="@+id/img_cover" />

            <TextView
                android:id="@+id/txt_fans_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="粉丝数量"
                android:textColor="@color/gray_888_short"
                android:textSize="@dimen/text_size_10sp"
                app:layout_constraintBottom_toBottomOf="@+id/img_cover"
                app:layout_constraintStart_toStartOf="@id/txt_author"
                app:layout_constraintTop_toBottomOf="@+id/txt_author" />

            <Button
                android:id="@+id/btn_focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/comment_orange"
                android:text="关注"
                android:textColor="@color/white_short"
                android:textSize="@dimen/text_size_10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="视频标题"
                android:textColor="@color/gray_222_short"
                android:textSize="@dimen/text_size_14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_focus" />

            <!-- 播放/弹幕/日期 -->
            <TextView
                android:id="@+id/tv_play_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/play_time"
                android:drawablePadding="@dimen/dp_4"
                android:text="播放次数"
                android:textColor="@color/gray_888_short"
                android:textSize="@dimen/text_size_10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_title" />

            <TextView
                android:id="@+id/tv_barrage_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:drawableLeft="@drawable/barrage"
                android:drawablePadding="@dimen/dp_4"
                android:text="弹幕次数"
                android:textColor="@color/gray_888_short"
                android:textSize="@dimen/text_size_10sp"
                app:layout_constraintStart_toEndOf="@id/tv_play_times"
                app:layout_constraintTop_toTopOf="@id/tv_play_times" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:text="日期"
                android:textColor="@color/gray_888_short"
                android:textSize="@dimen/text_size_10sp"
                app:layout_constraintStart_toEndOf="@id/tv_barrage_times"
                app:layout_constraintTop_toTopOf="@id/tv_play_times" />

            <!-- 操作按钮区 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_play_times">

                <Button
                    android:id="@+id/btn_like"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/selector_like"
                    android:text="点赞"
                    android:textColor="@color/gray_888_short"
                    android:textSize="@dimen/text_size_10sp"
                    app:layout_constraintEnd_toStartOf="@id/btn_coin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.25" />

                <Button
                    android:id="@+id/btn_coin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/selector_coin"
                    android:text="投币"
                    android:textColor="@color/gray_888_short"
                    android:textSize="@dimen/text_size_10sp"
                    app:layout_constraintEnd_toStartOf="@id/btn_star"
                    app:layout_constraintStart_toEndOf="@id/btn_like"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.25" />

                <Button
                    android:id="@+id/btn_star"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/selector_collect"
                    android:text="收藏"
                    android:textColor="@color/gray_888_short"
                    android:textSize="@dimen/text_size_10sp"
                    app:layout_constraintEnd_toStartOf="@id/btn_share"
                    app:layout_constraintStart_toEndOf="@id/btn_coin"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.25" />

                <Button
                    android:id="@+id/btn_share"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/selector_share"
                    android:text="分享"
                    android:textColor="@color/gray_888_short"
                    android:textSize="@dimen/text_size_10sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_star"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.25" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/txt_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12"
                android:text="相关推荐"
                android:textColor="@color/gray_222_short"
                android:textSize="@dimen/text_size_15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_group" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_recommend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingHorizontal="@dimen/dp_8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_recommend" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="txt_fans_count,txt_author" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/player_view"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="16dp" />

            <com.vincent.android.cili.view.BarrageView
                android:id="@+id/barrage_view"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="16dp"
                android:clickable="false"
                android:focusable="false" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:indeterminateTint="@color/progress_yellow" />

            <ImageView
                android:id="@+id/btn_fullscreen"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end|top"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:src="@drawable/fullscreen"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="start|top"
                android:layout_margin="8dp"
                android:src="@drawable/ic_arrow_back"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_led"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_led_disconnect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/btn_show_barrage_input"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="10sp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_barrage_btn"
                android:drawableEnd="@drawable/ic_barrage"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="点我发送弹幕"

                />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/tab_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/barrage_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:visibility="visible">

            <EditText
                android:id="@+id/barrage_edit"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/bg_card_border"
                android:cursorVisible="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="输入弹幕..."
                android:maxLines="1"
                android:padding="8dp"
                android:textSize="@dimen/text_size_12sp" />

            <ImageView
                android:id="@+id/barrage_send"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_send_barrage" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/comment_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@android:color/transparent">
            <EditText
                android:id="@+id/comment_edit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:background="@drawable/bg_barrage_btn"
                android:drawableStart="@drawable/ic_comment"
                android:drawablePadding="8dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:hint="这里是评论区，不是无人区 ;-)"
                android:textColor="#888888"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:lines="1" />
            <ImageView
                android:id="@+id/comment_send"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_send_barrage"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 全屏投币动画 -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/coin_animation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_mask"
        android:visibility="gone"
        app:lottie_autoPlay="false"
        app:lottie_loop="false" />

</merge>